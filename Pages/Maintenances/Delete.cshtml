@page
@model JGR_WGU_Capstone.Pages.Maintenances.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<span class="font-weight-bold" style="font-size: x-large;">Delete Maintenance</span>
<h5>Are you sure you want to delete this?</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Maintenance.Notes)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Maintenance.Notes)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Maintenance.MaintenanceDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Maintenance.MaintenanceDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Maintenance.MaintenanceID" />
        <input class="btn btn-danger btn-sm" type="submit" value="Delete" />
        <a class="btn btn-primary btn-sm" href="javascript:history.back();">Cancel</a>
    </form>
</div>
