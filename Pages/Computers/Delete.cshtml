@page
@model JGR_WGU_Capstone.Pages.Computers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div>
    <span class="font-weight-bold" style="font-size: x-large;">Delete Computer</span>
    <h5>Are you sure you want to delete this?</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Computer.SerialNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Computer.SerialNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Computer.Manufacturer)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Computer.Manufacturer)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Computer.Model)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Computer.Model)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Computer.PurchaseDate)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Computer.PurchaseDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Computer.ComputerID" />
        <input class="btn btn-sm btn-danger" type="submit" value="Delete" />
        <a class="btn btn-sm btn-primary" asp-page="./Index">Back to List</a>
    </form>
</div>
