@page
@model JGR_WGU_Capstone.Pages.Computers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <span class="font-weight-bold" style="float: left; font-size: x-large;">Computer List</span>
    <a class="btn btn-sm btn-success" style="float: right;" asp-page="Create">Create New</a>
    <form style="float: right; vertical-align: top; margin-right: 5px;">
        <input type="text" asp-for="SearchString" placeholder="Search" autocomplete="off"/>        
    </form>    
</p>
<br />
<br />

<table class="table">
    <thead class="thead-light">
        <tr>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.Computer[0].SerialNumber)
            </th>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.Computer[0].Manufacturer)
            </th>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.Computer[0].Model)
            </th>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.Computer[0].PurchaseDate)
            </th>
            <th style="min-width: 180px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Computer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-page="./Details" asp-route-id="@item.ComputerID">Details</a>
                    <a class="btn btn-sm btn-success" asp-page="./Edit" asp-route-id="@item.ComputerID">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="./Delete" asp-route-id="@item.ComputerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
