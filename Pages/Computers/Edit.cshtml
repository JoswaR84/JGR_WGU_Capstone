@page
@model JGR_WGU_Capstone.Pages.Computers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<span class="font-weight-bold" style="font-size: x-large;">Edit Computer</span>
<hr />

<div class="row">
    <div class="col-sm-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row" hidden>
                <label asp-for="Computer.ComputerID" class="col-sm-3 col-form-label font-weight-bold"></label>
                <div class="col-sm-9">
                    <input asp-for="Computer.ComputerID" class="form-control" />
                </div>
                <span asp-validation-for="Computer.ComputerID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Computer.SerialNumber" class="col-sm-3 col-form-label font-weight-bold"></label>
                <div class="col-sm-9">
                    <input asp-for="Computer.SerialNumber" class="form-control" />
                </div>
                <span asp-validation-for="Computer.SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Computer.Manufacturer" class="col-sm-3 col-form-label font-weight-bold"></label>
                <div class="col-sm-9">
                    <input asp-for="Computer.Manufacturer" class="form-control" />
                </div>
                <span asp-validation-for="Computer.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Computer.Model" class="col-sm-3 col-form-label font-weight-bold"></label>
                <div class="col-sm-9">
                    <input asp-for="Computer.Model" class="form-control" />
                </div>
                <span asp-validation-for="Computer.Model" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Computer.PurchaseDate" class="col-sm-3 col-form-label font-weight-bold"></label>
                <div class="col-sm-9">
                    <input asp-for="Computer.PurchaseDate" class="form-control" />
                </div>
                <span asp-validation-for="Computer.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-success btn-sm" type="submit" value="Save" />
                <a class="btn btn-primary btn-sm" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
